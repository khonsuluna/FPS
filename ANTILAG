--// === HELL TURBO MODE v2 ===
local GUI_NAME = "HellTurboGui"

if game.CoreGui:FindFirstChild(GUI_NAME) then
    game.CoreGui:FindFirstChild(GUI_NAME):Destroy()
end

local gui = Instance.new("ScreenGui")
gui.Name = GUI_NAME
gui.Parent = game.CoreGui
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 200, 0, 180)
frame.Position = UDim2.new(0.5, -100, 0.7, -90)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Active = true
frame.Draggable = true
frame.BackgroundTransparency = 0.2

local UICorner = Instance.new("UICorner", frame)
UICorner.CornerRadius = UDim.new(0, 10)

local UIListLayout = Instance.new("UIListLayout", frame)
UIListLayout.Padding = UDim.new(0, 6)
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.VerticalAlignment = Enum.VerticalAlignment.Top

local function makeButton(txt)
    local b = Instance.new("TextButton", frame)
    b.Size = UDim2.new(0, 160, 0, 40)
    b.Text = txt
    b.BackgroundColor3 = Color3.fromRGB(240, 90, 60)
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.TextScaled = true
    b.AutoButtonColor = false
    local cr = Instance.new("UICorner", b)
    cr.CornerRadius = UDim.new(0, 8)
    return b
end

-- states
local turbo = false
local potato = false
local hideall = false

--// SERVICES
local Lighting = game.Lighting
local Players = game.Players
local LocalPlayer = Players.LocalPlayer

--// === BUTTON: TURBO MODE ===
local turboBtn = makeButton("Turbo Mode")

turboBtn.MouseButton1Click:Connect(function()
    turbo = not turbo
    turboBtn.BackgroundColor3 = turbo and Color3.fromRGB(60, 200, 90) or Color3.fromRGB(240, 90, 60)

    if turbo then
        -- effect on
        Lighting.GlobalShadows = false
        Lighting.Ambient = Color3.new(1,1,1)
        for _,v in ipairs(workspace:GetDescendants()) do
            if v:IsA("ParticleEmitter") or v:IsA("Beam") then v.Enabled = false end
        end
        settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
    else
        -- effect off
        Lighting.GlobalShadows = true
        Lighting.Ambient = Color3.new(.5,.5,.5)
        for _,v in ipairs(workspace:GetDescendants()) do
            if v:IsA("ParticleEmitter") or v:IsA("Beam") then v.Enabled = true end
        end
        settings().Rendering.QualityLevel = Enum.QualityLevel.Automatic
    end
end)

--// === BUTTON: POTATO MODE ===
local potatoBtn = makeButton("Potato Mode")

potatoBtn.MouseButton1Click:Connect(function()
    potato = not potato
    potatoBtn.BackgroundColor3 = potato and Color3.fromRGB(60, 200, 90) or Color3.fromRGB(240, 90, 60)

    settings().Rendering.MeshPartDetailLevel = potato and Enum.MeshPartDetailLevel.Level00 or Enum.MeshPartDetailLevel.Level04
    workspace.Terrain.WaterWaveSize = potato and 0 or 0.15
    workspace.Terrain.WaterReflectance = potato and 0 or .5
end)

--// === BUTTON: HIDE PLAYER & ACCESSORIES ===
local hideBtn = makeButton("Hide Player")

hideBtn.MouseButton1Click:Connect(function()
    hideall = not hideall
    hideBtn.BackgroundColor3 = hideall and Color3.fromRGB(60, 200, 90) or Color3.fromRGB(240, 90, 60)

    local char = LocalPlayer.Character
    if not char then return end

    for _,v in pairs(char:GetDescendants()) do
        if v:IsA("BasePart") or v:IsA("Accessory") or v:IsA("Decal") then
            v.LocalTransparencyModifier = hideall and 1 or 0
        end
    end
end)
